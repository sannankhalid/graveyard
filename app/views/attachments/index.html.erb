<p id="notice"><%= notice %></p>

<h1>Attachments</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Created by</th>
      <th>Updated by</th>
      <th>Attachable</th>
      <th>Attachable type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attachments.each do |attachment| %>
      <tr>
        <td><%= attachment.created_by_id %></td>
        <td><%= attachment.updated_by_id %></td>
        <td><%= attachment.attachable_id %></td>
        <td><%= attachment.attachable_type %></td>
        <td><%= link_to 'Show', attachment %></td>
        <td><%= link_to 'Edit', edit_attachment_path(attachment) %></td>
        <td><%= link_to 'Destroy', attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

